<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/mipmap_foregrou">

    <Spinner
            android:id="@+id/spinnerUnits"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="119dp"
            android:background="#FFA500"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="107dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="107dp"
            android:layout_alignParentTop="true" />

    <EditText
            android:id="@+id/editTextCylinders"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/editTextPistonDiameter"
            android:hint="Quantidade de Cilindros"
            android:background="#FFA500"
            android:textColor="#000000"
            android:inputType="number"
            android:layout_marginTop="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="107dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="107dp"
            android:textAlignment="center" />

    <EditText
            android:id="@+id/editTextPistonDiameter"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/spinnerUnits"
            android:hint="Diâmetro do Cilindro"
            android:background="#FFA500"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:layout_marginTop="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="107dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="107dp"
            android:textAlignment="center" />

    <EditText
            android:id="@+id/editTextCrankshaftStroke"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/editTextCylinders"
            android:hint="Curso do Virabrequim"
            android:background="#FFA500"
            android:textColor="#000000"
            android:inputType="numberDecimal"
            android:layout_marginTop="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="107dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="107dp"
            android:textAlignment="center" />

    <Button
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextCrankshaftStroke"
            android:layout_marginTop="32dp"
            android:text="Calcular"
            android:background="#FFA500"
            android:textColor="#000000"
            android:id="@+id/buttonCalculate"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="159dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="159dp"
            android:textAlignment="center" />

    <EditText
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_below="@+id/buttonCalculate"
            android:layout_marginTop="24dp"
            android:hint="Resultado do Cálculo"
            android:background="#FFA500"
            android:textColor="#000000"
            android:inputType="none"
            android:gravity="center"
            android:textAlignment="center" />
</RelativeLayout>
